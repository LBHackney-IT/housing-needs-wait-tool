{{> header title=title }}
<section class="lbh-page-announcement">
  <h2 class="lbh-page-announcement__title">
    Use this tool to:
  </h2>
  <div class="lbh-page-announcement__content">
    <ul>
      <li>
        Find your current position on the register
      </li>
      <li>
        Estimate your wait time
      </li>
      <li>
        View recommended housing solutions
      </li>
    </ul>
  </div>
</section>
<form action="/results" method="POST">
  <div class="govuk-form-group">
    <label class="govuk-label" for="biddingNumber">
      Bidding Number
    </label>
    <input class="govuk-input lbh-input" type="number" name="biddingNumber" id="biddingNumber" required />
  </div>
  <div class="govuk-form-group dob">
    <span class="govuk-label">Date of Birth</span>
    <label class="govuk-label" for="day">
      Day
    </label>
    <input class="govuk-input lbh-input govuk-input--width-2" type="number" id="day" name="day" pattern="[0-9]*"
      placeholder="01" required />
    <label class="govuk-label" for="month">
      Month
    </label>
    <input class="govuk-input lbh-input govuk-input--width-2" type="number" id="month" name="month" pattern="[0-9]*"
      placeholder="01" required />
    <label class="govuk-label" for="year">
      Year
    </label>
    <input class="govuk-input lbh-input govuk-input--width-4" type="number" id="year" name="year" type="number"
      placeholder="1970" pattern="[0-9]*" required />
  </div>
  <div class="govuk-form-group">
    <input type="hidden" name="token" value="{{token}}" />
    <button class="govuk-button lbh-button">
      Search
    </button>
  </div>
  <div class="govuk-form-group govuk-hint lbh-hint">
    Don't know your bidding number? Email us at <a
      href="mailto:Housing.register@hackney.gov.uk">Housing.register@hackney.gov.uk</a> or call the Housing Register
    duty line on 020 8356 4412
  </div>
</form>
{{> footer }}